{
	"defaultSeverity": "error",
	"extends": "tslint-config-airbnb",
	"jsRules": {},
	"rules": {
		"import-name": false,
		"align": false,
		"brace-style": [
			true,
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"curly": true,
		"eofline": true,
		"indent": [
			true,
			"tabs",
			2
		],
		"max-line-length": [
			true,
			160
		],
		"no-floating-promises": true,
		"object-shorthand-properties-first": false,
		"prefer-const": [
			true,
			{
				"destructuring": "all"
			}
		],
		"quotemark": [
			true,
			"single"
		],
		"radix": true,
		"semicolon": [
			true,
			"always"
		],
		"ter-arrow-body-style": false,
		"ter-arrow-parens": [
			true,
			"as-needed",
			{
				"requireForBlockBody": true
			}
		],
		"ter-indent": [
			true,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": "always",
				"singleline": "never"
			}
		],
		"triple-equals": true
	},
	"rulesDirectory": []
}