{
	"name": "@plokkke/toolbox",
	"private": false,
	"version": "0.2.5",
	"author": "Antoine Caron <acaron@ineat.fr>",
	"license": "MIT",
	"description": "Some utilitarian functions",
	"keywords": [
		"Toolbox",
		"Utils"
	],
	"homepage": "https://gitlab.com/antoinecaron/toolbox",
	"repository": "gitlab:antoinecaron/toolbox",
	"main": "build/sources/index.js",
	"types": "build/sources/index.d.ts",
	"files": [
		"build/**/*"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"coverage": "nyc npm run test",
		"pregit-tag": "git fetch --all",
		"git-tag": "PKG_VERSION=$(jq -r \".version\" package.json) && test \"$(git rev-list -n 1 v${PKG_VERSION} 2> /dev/null)\" == \"$(git rev-list -n 1 HEAD)\" || git tag v${PKG_VERSION}",
		"postgit-tag": "for remote in $(git remote); do git push $remote --tags; done",
		"lint": "eslint --ignore-pattern build -o reports/eslint.report **/**.ts",
		"produce": "npm run lint && npm run test && npm run build",
		"prerelease": "git diff --quiet && npm run produce",
		"release": "npm run git-tag && if [[ $(jq -r \".private\" package.json) = \"false\" ]]; then npm publish --tag next; fi",
		"test": "mocha -r ts-node/register **/*.test.ts **/*.test.js",
		"watch-test": "nodemon -e 'js,ts' -i build -x 'npm run test'"
	},
	"dependencies": {
		"@types/bluebird": "^3.5.32",
		"@types/lodash": "^4.14.153",
		"@types/node": "^14.0.5",
		"bluebird": "^3.7.1",
		"eratum": "^2.0.6",
		"lodash": "^4.17.15"
	},
	"devDependencies": {
		"@types/chai": "^4.2.5",
		"@types/mocha": "^7.0.2",
		"@typescript-eslint/eslint-plugin": "^3.0.1",
		"@typescript-eslint/parser": "^3.0.1",
		"chai": "^4.2.0",
		"eslint": "^7.1.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-plugin-import": "^2.20.2",
		"mocha": "^7.2.0",
		"nodemon": "^2.0.4",
		"nyc": "^15.0.1",
		"ts-mocha": "^7.0.0",
		"ts-node": "^8.10.1",
		"typescript": "^3.9.3"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"sources"
		],
		"exclude": [
			"**/*.test.ts/"
		],
		"reporter": [
			"html",
			"lcovonly",
			"text-summary"
		]
	}
}
